<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.havadurumu"
             Title="havadurumu">
    <StackLayout Padding="10">
        <Entry x:Name="textBox" Placeholder="Değer girin" />
        <Button Text="Ekle" Clicked="Button_Clicked" />
        <Label Text="Üstüne tıklayarak hava durumlarını kaldıra bilirsiniz."/>

        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout x:Name="imageStackLayout" VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" Spacing="5">
            </StackLayout>
        </ScrollView>

        
    </StackLayout>
</ContentPage>